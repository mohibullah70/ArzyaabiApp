@model IGridPager
@{
    Int32 totalPages = Model.TotalPages;
    Int32 currentPage = Model.CurrentPage;
    Int32 firstDisplayPage = Model.FirstDisplayPage;
}

<div class="panel-footer mvc-grid-pager @Model.CssClasses">
    @*@if (totalPages > 1)
        {*@
    <ul class="pagination pagination-sm">
        @if (currentPage > 1)
            {
            <li data-page="1"><span>«</span></li>
                <li data-page="@(currentPage - 1)"><span>‹</span></li>
        }
        else
        {
            <li class="disabled"><span>«</span></li>
                <li class="disabled"><span>‹</span></li>
        }
        @for (Int32 page = firstDisplayPage; page <= totalPages && page < firstDisplayPage + Model.PagesToDisplay; page++)
            {
                if (page == currentPage)
                {
                <li class="active" data-page="@page"><span>@page</span></li>
            }
            else
            {
                <li data-page="@page"><span>@page</span></li>
            }
        }
        @if (currentPage < totalPages)
            {
            <li data-page="@(currentPage + 1)"><span>›</span></li>
                <li data-page="@totalPages"><span>»</span></li>
        }
        else
        {
            <li class="disabled"><span>›</span></li>
                <li class="disabled"><span>»</span></li>
        }
    </ul>
    <div class="rows-per-page" style="float:right">
        <select class="mvc-grid-pager-rows">
            @*@for (Int32 i = 10; i <= 200; i=i+10)
                {
                    if (Model.RowsPerPage == i)
                    {
                        <option value="@i" selected>@i</option>
                    }
                    else
                    {
                        <option value="@i">@i</option>
                    }
                }*@
            <option value="5" @(Model.RowsPerPage == 5 ? "selected" : "")>5</option>
            <option value="10" @(Model.RowsPerPage == 10 ? "selected" : "")>10</option>
            <option value="25" @(Model.RowsPerPage == 25 ? "selected" : "")>25</option>
            <option value="50" @(Model.RowsPerPage == 50 ? "selected" : "")>50</option>
            <option value="100" @(Model.RowsPerPage == 100 ? "selected" : "")>100</option>
            <option value="200" @(Model.RowsPerPage == 200 ? "selected" : "")>200</option>
            <option value="250" @(Model.RowsPerPage == 250 ? "selected" : "")>250</option>
            <option value="500" @(Model.RowsPerPage == 500 ? "selected" : "")>500</option>
        </select>
    </div>
    <i style="float:left" class="small">Total: @Model.TotalRows</i>
    @*}*@
</div>


